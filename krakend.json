{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Lappy API Gateway",
  "cache_ttl": "300s",
  "read_timeout": "20s",
  "write_timeout": "20s",
  "idle_timeout": "20s",
  "timeout": "20s",
  "output_encoding": "json",
  "port": 8080,
  "extra_config": {
      "auth/validator": {
          "shared_cache_duration": 900
      },
      "security/cors": {
          "allow_origins": [
            "*"
          ],
          "allow_methods": [
            "GET",
            "POST",
            "DELETE"
          ],
          "expose_headers": [
            "Content-Length",
            "Content-Type",
            "Authorization"
          ],
          "allow_headers": [
            "Accept-Language",
            "Authorization"
          ],
          "max_age": "12h",
          "allow_credentials": true,
          "debug": false
    }
  },
  "endpoints": [
      {
          "endpoint": "/laptops/{id}",
          "method": "GET",
          "output_encoding": "json",
          "backend": [
              {
                  "url_pattern": "/api/items/{id}",
                  "host": [
                      "http://specs-micro:8001"
                  ]
              },
              {
                  "url_pattern": "/news/search?find={resp0_producer}+{resp0_model}",
                  "method": "GET",
                  "host": [
                      "news-ms:8000"
                  ],
                  "input_query_strings": [
                      "find"
                  ],
                  "deny": [
                      "count"
                  ],
                  "mapping": {
                      "results": "news"
                  },
                  "extra_config": {
                      "modifier/lua-backend": {
                          "pre": "local r = request.load(); local link = r:url():gsub(' ', '+'); r:url(link);",
                          "allow_open_libs": true
                      }
                  }
              },
              {
                  "url_pattern": "/cases?diagonal={resp0_displaysize}",
                  "method": "GET",
                  "host": [
                      "http://accessories:8002"
                  ],
                  "input_query_strings": [
                      "diagonal"
                  ],
                  "is_collection": true,
                  "mapping": {
                      "collection": "cases"
                }
              },
              {
                  "url_pattern": "/disks?volume={resp0_volume}",
                  "method": "GET",
                  "host": [
                      "http://accessories:8002"
                  ],
                  "input_query_strings": [
                      "volume"
                  ],
                  "is_collection": true,
                  "mapping": {
                      "collection": "disks"
                  }
              },
              {
                  "url_pattern": "/headphones?model={resp0_producer}",
                  "method": "GET",
                  "host": [
                      "http://accessories:8002"
                  ],
                  "input_query_strings": [
                      "model"
                  ],
                  "is_collection": true,
                  "mapping": {
                      "collection": "headphones"
                  }
              },
              {
                  "url_pattern": "/laptop_ratings?title={resp0_model}",
                  "method": "GET",
                  "host": [
                      "http://rating-app:8004"
                  ],
                  "input_query_strings": [
                      "title"
                  ],
                  "is_collection": true,
                  "mapping": {
                      "collection": "rating"
                  },
                  "extra_config": {
                      "modifier/lua-backend": {
                          "sources": [
                            "/etc/krakend/ratings.lua"
                          ],
                          "pre": "local r = request.load(); local link = r:url():gsub(' ', '+'); r:url(link);",
                          "post": "swapResponse()",
                          "allow_open_libs": true
                      }
                  }
              }
          ],
          "extra_config": {
              "proxy": {
                  "sequential": true
              }
          }
      },
      {
          "endpoint": "/news/search",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/news/search",
                  "method": "GET",
                  "host": [
                    "news-ms:8000"
                  ]
              }
          ],
          "input_query_strings": [
              "find",
              "page",
              "limit",
              "period"
          ],
          "extra_config": {
              "auth/validator": {
                  "alg": "RS256",
                  "jwk_url": "http://auth-system:8005/jwk/",
                  "cache": true,
                  "disable_jwk_security": true,
                  "cache_duration": 3600,
                  "operation_debug": true
              }
          }
      },
      {
          "endpoint": "/news/{id}",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/news/{id}",
                  "method": "GET",
                  "host": [
                    "news-ms:8000"
                  ]
              }
          ],
          "extra_config": {
              "auth/validator": {
                  "alg": "RS256",
                  "jwk_url": "http://auth-system:8005/jwk/",
                  "cache": true,
                  "disable_jwk_security": true,
                  "cache_duration": 3600,
                  "operation_debug": true
              }
          }
      },
      {
          "endpoint": "/accessories/{item_type}",
          "input_query_strings": [
              "diagonal",
              "volume",
              "model",
              "page_numb",
              "page_size"
          ],
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/{item_type}",
                  "host": ["http://accessories:8002"],
                  "is_collection": true
              }
            ]
        },
        {
            "endpoint": "/laptops",
            "input_query_strings": [
                "producer",
                "series",
                "cpu",
                "gpu",
                "displaysize",
                "page"
            ],
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/api/items",
                    "host": ["http://specs-micro:8001"]
                }
            ]
        },
        {
          "endpoint": "/laptop_ratings",
          "method": "GET",
          "output_encoding": "json",
          "backend": [
            {
              "url_pattern": "/laptop_ratings",
              "encoding": "json",
              "host": ["rating_app:8002"]
            }
          ],
          "input_query_strings": ["title", "rating"]
        },

        {
          "endpoint": "/user/register",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/users/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type"]
        },
        {
          "endpoint": "/user/activate",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/users/activation/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type"]
        },
        {
          "endpoint": "/user/login",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/jwt/create/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type"]
        },
        {
          "endpoint": "/user/refresh",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/jwt/refresh/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type"]
        },
        {
          "endpoint": "/user/me/delete",
          "method": "DELETE",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/users/me/",
                "method": "DELETE",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type", "Authorization"]
        },
        {
          "endpoint": "/user/me/reset-password",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/users/reset_password/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type", "Authorization"]
        },
        {
          "endpoint": "/user/me/reset-password/confirm",
          "method": "POST",
          "output_encoding": "no-op",
          "backend": [
            {
                "url_pattern": "/auth/users/reset_password_confirm/",
                "method": "POST",
                "host": ["http://auth-system:8005"],
                "encoding": "no-op"
            }
          ],
          "input_headers": ["Content-Length", "Content-Type"]
        },
        {
            "endpoint": "/questions",
            "input_query_strings": ["laptop_id"],
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/questions/",
                    "method": "GET",
                    "host": ["http://auth-system:8005"],
                    "is_collection": true
                }
            ]
        },
        {
            "endpoint": "/questions",
            "output_encoding": "no-op",
            "input_headers": ["Content-Type", "Content-Length", "Authorization"],
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/questions/",
                    "encoding": "no-op",
                    "method": "POST",
                    "host": ["http://auth-system:8005"]
                }
            ]
        },
        {
            "endpoint": "/favorites",
            "input_headers": ["Cookie", "Authorization"],
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/favorites/",
                    "method": "GET",
                    "host": ["http://auth-system:8005"]
                },
                {
                    "url_pattern": "/api/selected?ids={resp0_favorites}",
                    "method": "GET",
                    "host": ["http://specs-micro:8001"],
                    "is_collection": true
                }
            ],
            "extra_config": {
                "proxy": {
                    "sequential": true
                }
            }
        },
        {
            "endpoint": "/favorites",
            "output_encoding": "no-op",
            "input_headers": ["Cookie", "Content-Type", "Content-Length", "Authorization"],
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/favorites/",
                    "encoding": "no-op",
                    "method": "POST",
                    "host": ["http://auth-system:8005"]
                }
            ]
        }
  ]
}
